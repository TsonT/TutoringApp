<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_gradient"
    tools:context=".ActivityLogIn">

    <TextView
        android:id="@+id/textSchools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="480dp"
        android:fontFamily="@font/baloo"
        android:text="Log In"
        android:textColor="@color/colorPencil"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSchools"
        app:layout_constraintVertical_bias="0.383">

        <EditText
            android:id="@+id/field_Email"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:background="#9A424040"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:textColor="@color/ic_launcher_background"
            android:textColorHint="@color/colorDarkGray"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/field_Password"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:background="#9A424040"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColor="@color/ic_launcher_background"
            android:textColorHint="@color/colorDarkGray"
            android:textSize="30dp" />


        <Button
            android:id="@+id/btn_LogIn"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/rounded_button"
            android:text="Log In"
            android:textColor="@android:color/white"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/text_Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:text="Don't Have An Account? Click Here To Register!" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="64dp"
        android:layout_height="74dp"
        android:layout_marginStart="186dp"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="161dp"
        app:layout_constraintBottom_toTopOf="@+id/textSchools"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pencil_logo_colored" />

</androidx.constraintlayout.widget.ConstraintLayout>