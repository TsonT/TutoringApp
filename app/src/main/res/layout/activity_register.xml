<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_gradient"
    tools:context=".ActivityRegister">

    <TextView
        android:id="@+id/textSchools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="488dp"
        android:fontFamily="@font/baloo"
        android:text="Create Account"
        android:textColor="@color/colorPencil"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.692"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSchools"
        app:layout_constraintVertical_bias="0.383">

        <EditText
            android:id="@+id/field_Email"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#9A424040"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:textColor="@color/ic_launcher_background"
            android:textColorHint="@color/colorDarkGray"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/field_Password"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:background="#9A424040"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColor="@color/ic_launcher_background"
            android:textColorHint="@color/colorDarkGray"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/field_ConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:background="#9A424040"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColor="@color/ic_launcher_background"
            android:textColorHint="@color/colorDarkGray"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btn_Confirm"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/rounded_button"
            android:text="Register"
            android:textColor="@android:color/white"
            android:textSize="25dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="120dp"
        android:layout_height="102dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toTopOf="@+id/textSchools"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pencil_logo_colored" />

</androidx.constraintlayout.widget.ConstraintLayout>